<com.komok.common.CheckableRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/tile_image"
        android:layout_width="@dimen/tile_image_width"
        android:layout_height="@dimen/tile_image_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dip"
        android:background="@android:color/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tile_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@+id/tile_image"
        android:background="@color/translucent_gray"
        android:ellipsize="marquee"
        android:gravity="left"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white" />
            
<!-- We dont want to be able to click the CheckBox -
        android:clickable="false" added.
        CheckableRelativeLayout takes care of the toggle when clicking the row -->
    <CheckBox
              android:id="@+id/custom_checkbox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:focusable="false"
              android:clickable="false"
              android:layout_alignParentLeft="true"
              android:background="@drawable/customcheckbox_background"
              android:button="@drawable/customcheckbox"
            />            
</com.komok.common.CheckableRelativeLayout>
